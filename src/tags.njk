---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
    - releasenote
  addAllPagesToCollections: true
layout: layouts/base.njk
renderData:
  title: Posts in “{{ tag }}”
permalink: /tags/{{ tag }}/
templateClass: content
colorMode: dark
navClass: bg-baby-blue
bgColor: baby-blue
---
<section id="tags" class="container">
  <div class="wrapper">
    <div class="grid-whole@xs grid-whole@s grid-twothirds@m grid-twothirds@l grid-twothirds@xl">
    <h1 class="t-eyebrow">Tagged <span class="t-cobalt">{{ tag }}</a></h1>

    {% set postslist = collections[ tag ] %}
    {% include "postslist.njk" %}
    </div>

    <div class="grid-whole@xs grid-whole@s grid-third@m grid-third@l grid-third@xl">
    <h2 class="t-serifweight">Explore more posts</h2>
    {% set tagBan = ['featured','selected','posts', 'event'] %}
        {% for tag in collections.tagList %}
            {% if tag not in tagBan %}

            {% set tagUrl %}
            /tags/{{ tag }}/

            {% endset %}
      <ul class="taglist">
      <li class=><a href="{{ tagUrl | url }}" class="t-tag">{{ tag }}</a>
      </li>
      </ul>
      {% endif %}
    {% endfor %}
    </div>
  </div>
</section>
